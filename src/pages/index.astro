---
import { Picture } from 'astro:assets'
import Layout from '../layouts/Layout.astro'
import Card from '../components/Card.astro'
import profileImg from '../assets/profile.png'
---

<Layout title="UEC太郎のページ" description="とある大学生のプロフィール">
  <Card>
    <div class="text-center">
      <Picture
          src={profileImg}
          alt="プロフィール画像"
          formats={['avif', 'webp']}
          loading="eager"
          class="profile-img"
          />
          <div class="name"><span>UEC太郎</span></div>
    </div>
  </Card>
</Layout>

<style>
  .text-center {
    text-align: center;
  }
  .profile-img {
    width: 25vw;
    height: 25vw;
    max-width: 200px;
    max-height: 200px;
    border-radius: 100%;
    border: 3px solid var(--color-accent);
  }
  .name {
    margin: 1rem auto 0 auto;
    font-size: 1.33rem;
    width: fit-content;
  }
  .name:after {
    content: '';
    display: block;
    width: 100%;
    height: 5px;
    border-radius: 5px;
    background-color: var(--color-accent);
    margin: 0.25rem auto 0 auto;
  }
</style>
